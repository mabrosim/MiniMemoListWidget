<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:overScrollMode="never"
              android:padding="5dp">

    <TextView
        android:id="@+id/textViewDisabledHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/widget_disabled_hint"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"/>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine1"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button1"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine2"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button2"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine3"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button3"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine4"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button4"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine5"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button5"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine6"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button6"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine7"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button7"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <EditText
            android:id="@+id/editTextLine8"
            style="@style/EditTextStyle"/>

        <ImageButton
            android:id="@+id/button8"
            style="@style/EditButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        style="@style/TextLineLayoutStyle">

        <TextView
            android:id="@+id/textFooter"
            android:layout_width="0dp"
            android:layout_weight="0.9"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/buttonSettings"
            style="@style/ButtonSettingsStyle"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>
