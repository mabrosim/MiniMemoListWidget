<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="ConfigurationActivityTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditActivityTheme" parent="android:Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/edit_activity_rounded_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="TextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextStyle.Line">
        <item name="android:background">@drawable/text_rounded_background</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextStyle.Line.First">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextStyle.Line.Last">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextStyle.Label">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextStyle.Timestamp">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditListSizeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextLineLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditListSizeStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">5,6,7,8,9</item>
        <item name="android:background">@drawable/text_edit_rounded_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/text_edit_rounded_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditButtonStyleNoMargin" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_clear_grey_400_24dp</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="EditButtonStyle"></style>
</resources>
